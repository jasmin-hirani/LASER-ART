<odoo>
    <data>
        <record id="sale_order_report_wizard_form" model="ir.ui.view">
            <field name="name">Sale Order Report Wizard Form</field>
            <field name="model">sale.order.report.wizard</field>
            <field name="arch" type="xml">
                <form string="GST Bill Detail Report">
                    <group>
                        <group>
                            <field name="date_from"/>
                        </group>
                        <group>
                            <field name="date_to"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_print_report" string="Print Report" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="sale_order_report_wizard_action" model="ir.actions.act_window">
            <field name="name">GST Bill Detail Report</field>
            <field name="res_model">sale.order.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="sale_order_report_wizard_form"/>
        </record>

        <!-- Menu Item -->
        <menuitem id="sale_order_report_menu"
                  name="GST Bill Detail Report"
                  action="sale_order_report_wizard_action"
                  parent="sale.menu_sale_report"
                  sequence="40"/>

        <!-- Report Action (Connects Python, XML and QWeb) -->
        <record id="action_sale_order_detail_report" model="ir.actions.report">
            <field name="name">GST Bill Detail Report</field>
            <field name="model">sale.order.report.wizard</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">sale_report_detail.gst_bill_detail_report</field>
            <field name="report_file">sale_report_detail.gst_bill_detail_report</field>
            <field name="binding_model_id" ref="model_sale_order_report_wizard"/>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>